{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "ES2015",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types"],
    "types": ["vuetify", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/", "./node_modules"]
}
